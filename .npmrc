# Security settings
audit=true
audit-level=moderate
fund=false

# Strict package management
save-exact=true
engine-strict=true

# Registry security
registry=https://registry.npmjs.org/
strict-ssl=true

# Prevent script execution during install for untrusted packages
ignore-scripts=false

# Lock file settings
package-lock=true


# Timeout settings for reliability
fetch-timeout=60000
fetch-retries=3

# Prefer offline packages when available
prefer-offline=true
